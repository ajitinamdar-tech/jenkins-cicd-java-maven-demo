def tomcatServerUrl = "http://172.31.40.78"

pipeline {
  agent {
    node {
      label 'jenkins-slave'
    }
  }

  stages {
    stage('Build') {
      steps {
        // Run the maven build
        sh '"mvn" -Dmaven.test.failure.ignore clean install'
      }
    }

    stage('Deploy') {
  steps {
    script {
      deploy adapters: [[$class: 'TomcatAdapter', credentialsId: 'tomcat-credentials', url: "${tomcatServerUrl}", path: '/pipeline-app']], war: 'target/*.war'
    }
  }
}
  }
}
